<Window x:Class="D3DLab.Debugger.Windows.VisualTreeviewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D3DLab.Debugger.Windows"
        xmlns:model="clr-namespace:D3DLab.Debugger.Model"
        mc:Ignorable="d" Title="{Binding Title}" x:Name="win"
        Height="600" Width="800">
    <Window.Resources>
        <local:VisualTreeviewerViewModel x:Key="ViewModel" />
        <DataTemplate DataType="{x:Type model:VisualProperty}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name}"/>
                <TextBlock Text="{Binding Value}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <StaticResource ResourceKey="ViewModel" />
    </Window.DataContext>
    <!--<StackPanel Orientation="Vertical" VerticalAlignment="Stretch">-->
    <TreeView Name="trvMenu" ItemsSource="{Binding Items}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TreeView.Resources>
            <ContextMenu x:Key="ContectMenuKey" Visibility="{Binding CanEditShader}" >
                <MenuItem Header="Shader Editor"  CommandParameter="{Binding}" Command="{Binding OpenShaderEditor}" 
                          />
            </ContextMenu>
        </TreeView.Resources>
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Components}">
                <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" >
                </TextBlock>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
        <TreeView.ItemContainerStyle>
            <Style TargetType="{x:Type TreeViewItem}">
                <Setter Property="ContextMenu" Value="{StaticResource ContectMenuKey}"/>
            </Style>
        </TreeView.ItemContainerStyle>
    </TreeView>
    <!-- component properties
        <ContentControl Content="{Binding SelectedComponent}"/>
        <Button Content="Add Component"/>
        <TextBox Text="{Binding ConsoleText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            KeyUp="TextBox_KeyUp"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"/> -->
    <!--</StackPanel>-->
</Window>
